@using MudBlazor.Utilities;

<MudDialog  Options="@(new DialogOptions()
            {
                BackdropClick = true,
                CloseOnEscapeKey = true,
                FullScreen = true,
                FullWidth = true,
            })"
            >
    <TitleContent>
        Transactions
    </TitleContent>
    <DialogContent>
        <ChildTransactionsTable Child="Child" HideRegularTransactions="_hideRegularTransactions"></ChildTransactionsTable>
    </DialogContent>
    <DialogActions>
        <MudCheckBox T="bool" @bind-Value="_hideRegularTransactions">Hide Regular</MudCheckBox>
        <MudButton OnClick="() => MudDialog.Close()">Close</MudButton>
    </DialogActions>
</MudDialog>