<MudDialog>
    <TitleContent>Add Funds</TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudNumericField Label="Amount"
                             @bind-Value="Amount"
                             Min="0.1m"
                             Required="true"
                             Immediate="true"/>
            <MudText Typo="Typo.caption">@($"{Child.Balance:C2} + {Amount:C2} = {Child.Balance + Amount:C2}")</MudText>
            <MudTooltip Text="Round Up">
                <MudIconButton Icon="@Icons.Material.Filled.ArrowCircleUp"
                               Color="Color.Success"
                               OnClick="RoundUp"></MudIconButton>
            </MudTooltip>
            <MudTextField Label="Description"
                          @bind-Value="Description"
                          Required="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="AddFunds" Color="Color.Primary">Add</MudButton>
        <MudButton OnClick="MudDialog.Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>