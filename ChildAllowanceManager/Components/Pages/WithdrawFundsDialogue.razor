<MudDialog>
    <TitleContent>Withdraw Funds</TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudNumericField Label="Amount"
                             @bind-Value="Amount"
                             Min="0.1m"
                             InputMode="@(InputMode.@decimal)"
                             Required="true"/>
            <MudTextField Label="Description"
                          @bind-Value="Description"
                          Required="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="WithdrawFunds" Color="Color.Primary">Withdraw</MudButton>
        <MudButton OnClick="MudDialog.Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>