<MudForm FieldChanged="args => OnTenantChanged()"
         ReadOnly="@ReadOnly"
         Validation="@(Validator.ValidateValue)"
         Model="@Tenant"
         ValidationDelay="0"
         @ref="@Form">
    <MudTextField @bind-Value="Tenant.TenantName"
                  For="() => Tenant.TenantName"
                  Label="Name"></MudTextField>
    <MudTextField @bind-Value="Tenant.UrlSuffix"
                  For="() => Tenant.UrlSuffix"
                  Label="URL Suffix" />
    <MudText Typo="Typo.subtitle1" Class="mt-1 pt-1">Parents:</MudText>
    <MudChipSet T="string"
                >
        @foreach (var parent in Parents)
        {
            <MudChip Color="Color.Primary"
                     Variant="Variant.Filled"
                     Class="ma-1"
                     Value="@parent.Id"
                     Text="@parent.Email"
                     OnClose="RemoveParentAsync"
                     T="string">
            </MudChip>
        }
        <MudButton Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="AddParentDialogue">
            Add
        </MudButton>
    </MudChipSet>
</MudForm>