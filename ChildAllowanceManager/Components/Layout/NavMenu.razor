@using ChildAllowanceManager.Services
@using Microsoft.AspNetCore.Components.Authorization
<MudNavMenu>
    @if (!string.IsNullOrEmpty(TenantSuffix))
    {
        <MudNavLink Href="@($"/{TenantSuffix}/children")" Match="NavLinkMatch.Prefix" Icon="fa-solid fa-children">Children</MudNavLink>
    }
    
    <AuthorizeView Roles="parent">
        <Authorized >
            <MudNavLink Href="@($"/{TenantSuffix}/configuration")" Match="NavLinkMatch.Prefix" Icon="fa-solid fa-hands-holding-child">Manage Children</MudNavLink>
        </Authorized>
    </AuthorizeView>
    
    <AuthorizeView Roles="admin">
        <Authorized >
            <MudNavLink Href="@($"/admin")" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AdminPanelSettings">Administration</MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>